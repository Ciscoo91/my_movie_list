{% for movie in movies["results"] %}
<div class="col-3">
    <div class="card mb-3">
        <img src="https://image.tmdb.org/t/p/w1280/{{movie["backdrop_path"]}}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{movie['title']}}</h5>
            <p class=" card-text">{{movie['overview'][:100]}} <a class="link-info" href="{{movie["id"]}}">See
                    more...</a></p>
            <p class="card-text"><small class="text-muted">Release date: {{movie['release_date']}}</small></p>
        </div>
    </div>
</div>
{% endfor %}